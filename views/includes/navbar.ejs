<style>
  .search-btn { background-color: #fe424d; color: #fff; border-radius: 25px; padding: 0 1rem; }
  .search-btn:hover { background-color: #fe424d; color: #fff; }
  .search-btn i { margin-right: 0.5rem; }
  .search-inp { border-radius: 25px; padding: 0.5rem 3rem; font-size: 1rem; }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">

    <!-- Brand -->
    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i> WanderLust
    </a>

    <!-- Toggler -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar Links -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

      <!-- Left Links -->
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <!-- Search -->
      <div class="navbar-nav ms-auto me-3">
        <form class="d-flex" role="search" action="/listings" method="GET">
          <input name="search" class="form-control me-2 search-inp" type="search" placeholder="Search destination">
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i> Search
          </button>
        </form>
      </div>

      <!-- Right Links -->
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>

        <% if (!currUser) { %>
          <a class="nav-link" href="/Signup"><b>Sign up</b></a>
          <a class="nav-link" href="/Login"><b>Log in</b></a>
        <% } else { %>
          <a class="nav-link" href="/logout"><b>Logout</b></a>
          <span class="nav-link">
            Hello, <%= currUser.username || currUser.email || 'User' %>
          </span>
        <% } %>
      </div>

    </div>
  </div>
</nav>
